	<div class='row'>
		<%= render 'users/aside'%>

		<div class='col-md-8 col-lg-9'>
			<div id="content">
				<% if @posts.any? %>
				<!-- Listamos los posts -->
				<%= render partial: 'posts/post', collection: @posts %>
				<%else%>
				<%= render 'posts/empty'%>
				<%end%>
			</div>

		</div>
	</div>
</div>

