<div class="post">
	<div class="post-user">
		<%= post.user.name %><br/>
		<%= link_to '@' + post.user.username, "users/#{post.user.id}" %>
	</div>

	<div class="post-content">
		<p><%= post.content %></p>
		<% if post.user.username == current_user.username %>
			<%=link_to t('.edit_link'), edit_post_path(post)%>
			<%=link_to t('.delete_link'), post_path(post), method: :delete %>
		<% end %>
	</div>
	
</div> 