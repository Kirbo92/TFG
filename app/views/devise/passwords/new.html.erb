<div class='bg--gray u-wrapper'>
	<h2><%= t('.title') %></h2>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'pure-form pure-form-aligned', method: :post }) do |f| %>
	<%= devise_error_messages! %>

	<div class='form-group'>
		<%= f.label :email %>
		<%= f.email_field :email, autofocus: true, class: 'form-control' %>
	</div>

	<%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-primary'%>
	
	<% end %>

	<%= render "devise/shared/links" %>

</div>
