<h2><%= t('.title') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'pure-form pure-form-aligned', method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="pure-control-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="pure-control">
    <%= f.submit t('.send_me_reset_password_instructions'), class: 'pure-button pure-button-primary'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
