<div class='container'>
  <div class="row">
    <div class='panel center-form'>
      <div class="panel-body">
        <h2 class='text-center'><%= t('.title') %></h2>

        <%= form_for(resource,  as: resource_name, 
        url: registration_path(resource_name)) do |f| %>
        
        <%= devise_error_messages! %>

        <div class='form-group'>
          <%= f.text_field :username, autofocus: true, placeholder: 'Usuario',
                            class: 'form-control input-lg' %>                     
        </div>

        <div class='form-group'>
          <%= f.text_field :name, placeholder: 'Nombre', 
                            class: 'form-control input-lg' %>
        </div>

        <div class='form-group'>
          <%= f.email_field :email, placeholder: 'Email', 
                              class: 'form-control input-lg' %>
        </div>

        <div class='form-group'>
          <%= f.password_field :password, placeholder: 'ContraseÃ±a', autocomplete: "off", 
                                class: 'form-control input-lg' %>
        </div>
        
        <%= f.submit class: 'btn btn-lg btn-block btn-primary'%>

        <% end %>
        
        <br/>
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>


