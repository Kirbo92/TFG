<div class='u-wrapper'>

<h2> Perfil de <%= @user.name %> </h2> 

<% if @user.id != current_user.id %>
	<% if @follower.user_id %>
		<%= button_to 'Dejar de seguir', follower_path(@follower), class: 'pure-button pure-button-primary', method: :delete %>
	<% else %>
		<%= form_for @follower do |f| %>
			<%= f.hidden_field :user_id , value: current_user.id %>
			<%= f.hidden_field :user_followed_id , value: @user.id %>
			<%= f.submit 'Seguir', class: 'pure-button pure-button-primary' %>
		<%end%>
	<% end %>
<% end %>


<% @user.posts.each do |post|%>
	
	<div class='posts bg--gray'>
		<div class='posts__user posts__user--<%= post.user.level%> u-left'>
			<%= image_tag('avatar.jpg', class: 'posts__user__avatar')%>
			<span> <%= post.user.name %> </span><br/>
			<span> <%= link_to '@' + post.user.username, "users/#{post.user.id}" %></span>
		</div>

		<div class='posts__content'>
			<p><%= post.content %></p>
		</div>
	</div>
	
<%end%>

</div>